@model P50_4_22.Models.User

@{
    ViewData["Title"] = "Профиль";
}

<div class="auth-container">
    <div class="auth-buttons">
        <button class="action-button login" onclick="showLoginModal()">Войти</button>
        <button class="action-button register" onclick="showRegisterModal()">Регистрация</button>
    </div>

    <!-- Модальное окно для авторизации -->
    @await Html.PartialAsync("~/Views/Shared/Auth/_LoginModal.cshtml")

    <!-- Модальное окно для регистрации -->
    @await Html.PartialAsync("~/Views/Shared/Auth/_RegisterModal.cshtml")

    <!-- Модальное окно для восстановления пароля (ввод email) -->
    @await Html.PartialAsync("~/Views/Shared/Auth/_ForgotPasswordModal.cshtml")

    <!-- Модальное окно для ввода кода -->
    @await Html.PartialAsync("~/Views/Shared/Auth/_VerifyCodeModal.cshtml")

    <!-- Модальное окно для смены пароля -->
    @await Html.PartialAsync("~/Views/Shared/Auth/_ResetPasswordModal.cshtml")
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/auth.css" />
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/auth-modal.js"></script>
}